# set modifier
set $super Mod4
set $alt Mod1

set $terminal alacritty

# set font
font pango:Ionicons 9, SF Pro Display 9

# use mouse+$super to drag floating windows to their wanted position

floating_modifier $super

# start a terminal
bindsym $super+Return exec $terminal

# start dmenu (a program launcher)
bindsym $super+space exec $HOME/.local/share/bin/rofi-launcher.sh d
bindsym $super+w exec $HOME/.local/share/bin/rofi-launcher.sh w
bindsym $super+p exec $HOME/.local/share/bin/power-menu.sh

#flameshot
bindsym Print exec $HOME/.local/share/bin/screenshot.sh
bindsym $super+l exec $HOME/.local/share/bin/i3lock.sh

# change volume and brightness
bindsym XF86AudioRaiseVolume exec $HOME/.local/share/bin/volume_control.sh --inc
bindsym XF86AudioLowerVolume exec $HOME/.local/share/bin/volume_control.sh --dec
bindsym XF86AudioMute exec $HOME/.local/share/bin/volume_control.sh --toggle
bindsym XF86MonBrightnessUp exec brightnessctl set 5%+
bindsym XF86MonBrightnessDown exec brightnessctl set 5%-

# kill focused window
bindsym $super+q kill

# change focus
bindsym $super+h focus left
bindsym $super+n focus down
bindsym $super+e focus up
bindsym $super+i focus right

# move focused window
bindsym $super+Shift+h move left
bindsym $super+Shift+n move down
bindsym $super+Shift+e move up
bindsym $super+Shift+i move right

# split in horizontal or vertical orientation
bindsym $super+v split h
bindsym $super+s split v

# enter fullscreen mode for the focused container
bindsym $super+f fullscreen toggle

# toggle tiling / floating
bindsym $super+Shift+f floating toggle

# change focus between tiling / floating windows
bindsym $super+Shift+space focus mode_toggle

# switch to workspace
bindsym $super+Right workspace next
bindsym $super+Left workspace prev
# Define workspaces with custom names
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"

# Bind keys to workspaces
bindsym $super+1 workspace $ws1
bindsym $super+2 workspace $ws2
bindsym $super+3 workspace $ws3
bindsym $super+4 workspace $ws4
bindsym $super+5 workspace $ws5
bindsym $super+6 workspace $ws6
bindsym $super+7 workspace $ws7
bindsym $super+8 workspace $ws8
bindsym $super+9 workspace $ws9

# Move focused container to workspace
bindsym $super+Shift+1 move container to workspace $ws1
bindsym $super+Shift+2 move container to workspace $ws2
bindsym $super+Shift+3 move container to workspace $ws3
bindsym $super+Shift+4 move container to workspace $ws4
bindsym $super+Shift+5 move container to workspace $ws5
bindsym $super+Shift+6 move container to workspace $ws6
bindsym $super+Shift+7 move container to workspace $ws7
bindsym $super+Shift+8 move container to workspace $ws8
bindsym $super+Shift+9 move container to workspace $ws9

# Cycle through workspaces
bindsym $super+Tab workspace back_and_forth

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $super+Shift+r exec "i3-msg restart"

#gpick
bindsym $super+k exec gpick -o -s | tr -d '\n' | xclip -sel c


# resize window (you can also use the mouse for that)
mode "resize" {
	bindsym Left resize shrink width 5 px or 5 ppt
	bindsym Down resize grow height 5 px or 5 ppt
	bindsym Up resize shrink height 5 px or 5 ppt
	bindsym Right resize grow width 5 px or 5 ppt
	bindsym Return mode "default"
	}
bindsym $super+r mode "resize"

# colour of border, background, text, indicator, and child_border
client.focused       = #5C6A72 #A7C080 #3A4947 #D3C6AA  #F85552
client.focused_inactive = #868D80 #A7C080 #D3C6AA #868D80 #868D80
client.unfocused     = #868D80 #A7C080 #D3C6AA #868D80 #868D80
client.urgent        = #F85552 #A7C080 #D3C6AA #E67E80 #5C6A72
client.placeholder   = #868D80 #A7C080 #D3C6AA #868D80 #868D80
client.background    = #2B3339

# window rules, you can find the window class using xprop
for_window [class=Eog|Sxiv|feh|mpv|Vlc|File-roller|Xarchiver] floating enable
for_window [class=Eog|Sxiv|feh|mpv|Vlc|File-roller|Xarchiver] focus
for_window [class="org.wezfurlong.wezterm"] move to workspace $ws1
for_window [class="firefox|Firefox|firefox-default"] move to workspace $ws2
for_window [class="Zalo"] move to workspace $ws3
for_window [class="Google-chrome"] move to workspace $ws4
for_window [class="Postman"] move to workspace $ws5
for_window [class="discord"] move to workspace $ws6

for_window [class="^.*"]  border pixel 3
focus_on_window_activation focus
hide_edge_borders smart
gaps inner 3
gaps outer 3
smart_gaps off

exec_always --no-startup-id $HOME/.config/polybar/launch.sh
exec_always --no-startup-id xcompmgr -c -C -t-5 -l-5 -r4.2 -o.55
exec --no-startup-id $HOME/.local/share/bin/welcome.sh
